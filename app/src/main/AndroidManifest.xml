<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ba.sema.biblioteka">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="ba.sema.biblioteka.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_biblioteka"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Default">

        <activity
            android:name="ba.sema.biblioteka.activities.StartupActivity"
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="ba.sema.biblioteka.activities.LoginActivity"
            android:theme="@style/AppTheme.FullScreen"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>

        <activity
            android:name="ba.sema.biblioteka.activities.MainActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name">
        </activity>

    </application>

</manifest>
